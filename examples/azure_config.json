{
    "resource": {
      "azure_storage_account": {
        "myStorage": {
          "allowBlobPublicAccess": true,
          "enable_https_traffic_only": false
        }
      },
      "azure_sql_server": {
        "mySQLServer": {
          "publicNetworkAccess": "Enabled",
          "minimalTlsVersion": "1.0"
        }
      },
      "azure_nsg": {
        "myNSG": {
          "security_rules": [
            {"sourceAddressPrefix": "*", "sourcePortRange": "*"}
          ]
        }
      }
    }
  }